<MudPaper Class="pa-3 mb-3">
    <MudText Typo="Typo.h6">@Title</MudText>
    <MudStack Row="true" Spacing="1" Wrap="Wrap.Wrap" Justify="Justify.FlexStart">
        @foreach (var member in Users)
        {
            <MudChip T="string">@member.FirstName @member.LastName</MudChip>
        }
    </MudStack>

</MudPaper>

@code {
    [Parameter] public List<User> Users { get; set; } = new();
    [Parameter] public string Title { get; set; } = string.Empty;
}