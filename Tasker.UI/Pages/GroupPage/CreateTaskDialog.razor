@inject IGroupsManager _groupsManager


<MudDialog>
    <TitleContent>
        Create new task
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="assignment.Title" Variant="Variant.Outlined" class="form-control" />
        <MudTextField @bind-Value="assignment.Description" Variant="Variant.Outlined" class="form-control" Lines="4" />

    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="CreateAssignment">Create task</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter]
    public long GroupId { get; set; } = default;

    Domain.Assignment assignment = new();
    protected async Task CreateAssignment()
    {
        Domain.Assignment createdAssignment = await _groupsManager.CreateAssignment(GroupId, assignment);
        MudDialog.Close(DialogResult.Ok(createdAssignment));
    }

}