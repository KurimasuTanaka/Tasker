@inject IGroupsManager _groupsManager


<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Edit group info</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="group.Name" Variant="Variant.Outlined" class="form-control mv-2" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="UpdateGroup">Edit group info</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Group group { get; set; } = new();
    [Parameter] public EventCallback<Group> UpdateGroupCallback { get; set; }

    protected async Task UpdateGroup()
    {
        group = await _groupsManager.UpdateGroup(group);
        await UpdateGroupCallback.InvokeAsync(group);
        MudDialog.Close(DialogResult.Ok(group));
    }

}