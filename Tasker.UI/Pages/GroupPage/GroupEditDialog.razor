@inject IGroupServiceUI _groupServiceUI


<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Edit group info</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="group.Name" Variant="Variant.Outlined" class="form-control mv-2" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="UpdateGroup">Edit group info</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Group group { get; set; } = new();
    [Parameter] public EventCallback<Group> OnGroupUpdated { get; set; }

    protected async Task UpdateGroup()
    {
        try
        {
            group = await _groupServiceUI.UpdateGroup(group);
            await OnGroupUpdated.InvokeAsync(group);
            MudDialog.Close(DialogResult.Ok(group));
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
            MudDialog.Close();
        }
}

}