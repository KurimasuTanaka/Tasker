@inject IGroupServiceUI _groupServiceUI


<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add new member</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Variant="Variant.Outlined" HelperText="Enter user ID" @bind-Value="newUserId" class="form-control mv-2" />
    </DialogContent>
    <DialogActions>
        <MudButton ButtonType="ButtonType.Submit" @onclick="AddMember">Add member</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public long GroupId { get; set; } = default!;
    [Parameter] public EventCallback<Group> OnUserAdded { get; set; }

    string newUserId = string.Empty;

    protected async Task AddMember()
    {
        Group updatedGroup = await _groupServiceUI.AddMember(GroupId, newUserId);
        await OnUserAdded.InvokeAsync(updatedGroup);
        MudDialog.Cancel();
    }

}
