@inject IGroupsManager _groupsManager


<MudDialog>
    <TitleContent>
        Update task
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="assignment.Title" Variant="Variant.Outlined" class="form-control" />
        <MudTextField @bind-Value="assignment.Description" Variant="Variant.Outlined" class="form-control" Lines="4" />

    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="UpdateAssignment">Edit task</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public DataAccess.Assignment assignment { get; set; } = new();
    protected async Task CreateAssignment()
    {
        DataAccess.Assignment createdAssignment = await _groupsManager.CreateAssignment(assignment.GroupId, assignment);
        MudDialog.Close(DialogResult.Ok(createdAssignment));
    }

    protected async Task UpdateAssignment()
    {
        assignment = await _groupsManager.UpdateAssignment(assignment.GroupId, new AssignmentDTO
        {
            AssignmentId = assignment.AssignmentId,
            Title = assignment.Title,
            Description = assignment.Description,
            IsCompleted = assignment.IsCompleted,
            GroupId = assignment.GroupId
        });
        MudDialog.Close(DialogResult.Ok(assignment));


    }
}