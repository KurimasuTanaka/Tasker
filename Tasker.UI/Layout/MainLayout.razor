@inherits LayoutComponentBase
@inject NavigationManager navMan

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudText Typo="Typo.h4">Tasker</MudText>
        <AuthorizeView>
            <Authorized>
                <MudButton Size="Size.Large" Color="Color.Default" Href="/dashboard">Dashboard</MudButton>
                <MudButton Size="Size.Large" Color="Color.Default" Href="/logout">Logout</MudButton>
            </Authorized>
        </AuthorizeView>

    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="p-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<AuthorizeView>
    <NotAuthorized>
        <RedirectToMain />
    </NotAuthorized>
</AuthorizeView>

