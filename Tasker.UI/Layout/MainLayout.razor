@using Tasker.UI.Pages
@inherits LayoutComponentBase
@inject NavigationManager navMan
@inject IAuthServiceUI _authService
@inject IDialogService DialogService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudText Typo="Typo.h4" class="mr-5">Tasker</MudText>
        <AuthorizeView>
            <Authorized>

                <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/dashboard">
                    Dashboard
                </MudButton>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" OnClick="Logout">
                    Logout
                </MudButton>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" OnClick="ShowUserInfo">
                    User Info
                </MudButton>

                <MudSpacer />
                <NotificationsPopover />
            </Authorized>
        </AuthorizeView>

    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="p-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<AuthorizeView>
    <NotAuthorized>
        <RedirectToMain />
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task Logout()
    {
        await _authService.Logout();
        navMan.NavigateTo("/");
    }
    private Task ShowUserInfo(MouseEventArgs args)
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, };
        return DialogService.ShowAsync<UserInfoDialog>("User Info", options);
    }
}