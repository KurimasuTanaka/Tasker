@using Tasker.UI.Pages
@inherits LayoutComponentBase
@inject NavigationManager navMan
@inject IAuthService _authService
@inject IDialogService DialogService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudText  Typo="Typo.h4">Tasker</MudText>
        <AuthorizeView>
            <Authorized>
                <MudButton Size="Size.Large" Color="Color.Default" OnClick="Logout">Logout</MudButton>
                <MudButton Size="Size.Large" Color="Color.Default" OnClick="ShowUserInfo">UserInfo</MudButton>
            </Authorized>
        </AuthorizeView>

    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="p-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<AuthorizeView>
    <NotAuthorized>
        <RedirectToMain />
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task Logout()
    {
        await _authService.Logout();
        navMan.NavigateTo("/");
    }
    private Task ShowUserInfo(MouseEventArgs args)
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, };
        return DialogService.ShowAsync<UserInfoDialog>("User Info",  options);
    }
}
